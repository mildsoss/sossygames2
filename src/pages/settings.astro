---







import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Settings - SossyGames2" currentPath="/settings">
	<div class="max-w-4xl">
		<h1 class="text-3xl font-bold text-gray-900 mb-6">Settings</h1>

		<div class="bg-white rounded-lg shadow p-6 mb-6">
			<h2 class="text-xl font-semibold text-gray-800 mb-4">General Settings</h2>
			<div class="space-y-4">
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-2">
						Display Name
					</label>
					<input
						type="text"
						placeholder="Enter your display name"
						class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
					/>
				</div>
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-2">
						Theme
					</label>
					<select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
						<option>Light</option>
						<option>Dark</option>
						<option>Auto</option>
					</select>
				</div>
			</div>
		</div>

		<div class="bg-white rounded-lg shadow p-6">
			<h2 class="text-xl font-semibold text-gray-800 mb-4">Preferences</h2>
			<div class="space-y-3">
				<label class="flex items-center">
					<input type="checkbox" class="mr-3 h-4 w-4 text-blue-600" />
					<span class="text-gray-700">Enable notifications</span>
				</label>
				<label class="flex items-center">
					<input type="checkbox" class="mr-3 h-4 w-4 text-blue-600" />
					<span class="text-gray-700">Show game recommendations</span>
				</label>
				<label class="flex items-center">
					<input type="checkbox" class="mr-3 h-4 w-4 text-blue-600" />
					<span class="text-gray-700">Auto-save progress</span>
				</label>
			</div>
		</div>
	</div>
</Layout>
